---
import Root from "../Root.astro";
import Header from "./Header.astro";
import Footer from "./Footer.astro";

export interface Props {
  title?: string;
}
---

<Root title={Astro.props.title}>
  <div class="container">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </div>
</Root>

<style lang="scss">
  .container {
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100%;
    border-top: 8px solid var(--brand-primary-color);
    border-bottom: 8px solid var(--brand-primary-color);
  }
  main {
    padding: 50px 20%;

    @media screen and (max-width: 840px) {
      padding: 20px;
      padding-bottom: 40px;
    }
  }
</style>
