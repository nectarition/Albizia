---
import "../styles/style.scss";
import config from "../config";

export interface Props {
  title?: string;
}

const pageTitle =
  (Astro.props.title && `${Astro.props.title} - ${config.name}`) || config.name;
const description = `${config.date}、${config.place}にて開催される「${config.name}」の特設サイトです。`;
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="generator" content="Nectarition Albizia v1.0" />

    <meta name="description" content={description} />

    <meta property="og:title" content={pageTitle} />
    <meta property="og:site_name" content={config.name} />
    <meta property="og:image" content={`${config.url}/card.png`} />
    <meta property="og:url" content={config.url} />
    <meta property="og:description" content={description} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${config.url}/card.png`} />

    <title>{pageTitle}</title>
  </head>
  <body>
    <div id="luxy">
      <slot />
    </div>
  </body>
</html>

<script is:inline lang="ts">
  import luxy from "luxy.js";
  luxy.init({
    wrapperSpeed: 0.4,
  });
</script>

<style>
  #luxy {
    height: 100%;
  }
</style>
