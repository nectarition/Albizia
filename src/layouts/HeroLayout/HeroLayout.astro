---
import Hero from "./Hero.astro";
import Sidebar from "../BaseLayout/Sidebar.astro";
import Root from "../Root.astro";
import Footer from "../BaseLayout/Footer.astro";

export interface Props {
  title?: string;
}
---

<Root title={Astro.props.title}>
  <div class="wrap">
    <div class="container">
      <nav>
        <Sidebar />
      </nav>
      <div class="hero">
        <Hero />
      </div>
    </div>
    <main class="body">
      <slot />
    </main>
    <Footer />
  </div>
</Root>

<style lang="scss">
  .wrap {
    height: 100%;
    display: grid;
    grid-template-rows: 1fr auto;
  }
  .container {
    display: grid;
    grid-template-columns: 30% 1fr;
    @media screen and (max-width: 840px) {
      grid-template-columns: 1fr;
    }
  }
  main {
    display: grid;
    background-color: #ffffff;
    padding: 40px 10%;
    @media screen and (max-width: 840px) {
      padding: 20px;
    }
  }
  nav {
    align-self: flex-start;
    @media screen and (max-width: 840px) {
      position: unset;
    }
  }
</style>
